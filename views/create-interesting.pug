extends layout.pug
mixin option(value, text)
  option(value=value selected=(value === favoriteBeatle)) #{text}
  
block content
    h2= title
    include includes/errors.pug
    form(method="post", action="/create-interesting")
        include includes/form-inputs.pug
        label(for="age") Age:
        input(type="number", id="age", name="age", value=age)
        label(for="favoriteBeatle") Favorite Beatle:
        select(id="favoriteBeatle", name="favoriteBeatle", value=favoriteBeatle)
            +option('','--Please choose an option--') 
            +option('John','John') 
            +option('Paul','Paul') 
            +option('Ringo','Ringo') 
            +option('George','George') 
            +option('Scooby-Doo','Scooby-Doo')
        label(for="iceCream") Likes Ice Cream:
        input(type="checkbox", id="iceCream", name="iceCream", value=iceCream, checked=iceCream)
        input(type="submit", value="Create Interesting User")
